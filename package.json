{
  "name": "v6-monorepo",
  "private": true,
  "workspaces": [
    "client",
    "functions",
    "shared"
  ],
  "scripts": {
    "dev:client": "npm run dev -w client",
    "seed": "node scripts/seed_data.js",
    "build:client": "npm run build -w client",
    "build:functions": "npm run build -w functions",
    "build": "npm run build:client && npm run build:functions",
    "deploy:functions": "node scripts/deploy_functions.js",
    "deploy:hosting": "npm run build:client && firebase deploy --only hosting",
    "deploy": "npm run build:client && npm run deploy:functions && firebase deploy --except functions"
  },
  "devDependencies": {
    "@firebase/rules-unit-testing": "^5.0.0",
    "chai": "^4.3.7",
    "mocha": "^11.7.5",
    "playwright": "^1.57.0"
  },
  "dependencies": {
    "firebase-tools": "^15.2.1"
  }
}
