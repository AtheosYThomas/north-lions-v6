rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    function isAdmin() {
      return request.auth != null && (
        get(/databases/(default)/documents/members/$(request.auth.uid)).data.system.role == 'admin' ||
        get(/databases/(default)/documents/members/$(request.auth.uid)).data.role == 'admin'
      );
    }

    match /{allPaths=**} {
      allow read: if true;
      allow write: if isAdmin();
    }
  }
}