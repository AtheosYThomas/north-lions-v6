rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Basic helpers
    function isAuthenticated() {
      return request.auth != null;
    }

    // Consider user an officer/admin if either users/{uid} or members/{uid} has role == 'admin'
    function isOfficer() {
      return isAuthenticated() && (
        (get(/databases/$(database)/documents/users/$(request.auth.uid)).exists() &&
          get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin') ||
        (get(/databases/$(database)/documents/members/$(request.auth.uid)).exists() &&
          get(/databases/$(database)/documents/members/$(request.auth.uid)).data.role == 'admin')
      );
    }

    // Default: deny everything unless matched below
    match /{document=**} {
      allow read, write: if false;
    }

    // Events: public read; only officers may write
    match /events/{eventId} {
      allow read: if true; // public
      allow write: if isOfficer();
    }

    // Users: owner or officer may read; only officer may write
    match /users/{userId} {
      allow read: if request.auth != null && (request.auth.uid == userId || isOfficer());
      allow write: if isOfficer();
    }

    // Members: owner or officer may read/write; officers may write any
    match /members/{memberId} {
      allow read: if request.auth != null && (request.auth.uid == memberId || isOfficer());
      allow write: if request.auth != null && (request.auth.uid == memberId || isOfficer());
    }

    // Registrations: anyone can create (allow public signups), officers manage
    match /registrations/{regId} {
      allow create: if true;
      allow read, update, delete: if isOfficer();
    }
  }
}
