rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Helper functions
    function isAuthenticated() {
      return request.auth != null;
    }
    function isOwner(userId) {
      return request.auth.uid == userId;
    }
    function isAdmin() {
      // Future: check custom claims or admin list in DB
      return get(/databases/$(database)/documents/members/$(request.auth.uid)).data.system.role == 'admin';
    }

    // 1. Members: Users can read/write their own profile; Admins can manage all.
    match /members/{userId} {
      allow read: if isOwner(userId) || isAdmin();
      allow create: if isAuthenticated() && isOwner(userId); // Users create their own doc on first login
      allow update: if isOwner(userId) || isAdmin();
      allow delete: if isAdmin();
    }

    // 2. Announcements: Public read (or authenticated), Admin write.
    match /announcements/{announcementId} {
      allow read: if true;
      allow write: if isAuthenticated() && isAdmin();
    }

    // 3. Donations: Users read own; Admins read/write all.
    match /donations/{donationId} {
      allow read: if isAuthenticated() && (resource.data.memberId == request.auth.uid || isAdmin());
      allow write: if isAuthenticated() && isAdmin(); // Typically donations are recorded by admins or system
    }

    // 4. Events: Public read; Admin write.
    match /events/{eventId} {
      allow read: if true;
      allow write: if isAuthenticated() && isAdmin();
    }

    // 5. Registrations: Users read/write own; Admins manage all.
    match /registrations/{registrationId} {
      allow read: if isAuthenticated() && (resource.data.info.memberId == request.auth.uid || isAdmin());
      allow create: if isAuthenticated() && request.resource.data.info.memberId == request.auth.uid;
      allow update: if isAuthenticated() && (resource.data.info.memberId == request.auth.uid || isAdmin()); // Users can cancel/update needs
      allow delete: if isAuthenticated() && isAdmin();
    }

    // 6. Message Logs: Admin only (typically system generated).
    match /message_logs/{logId} {
      allow read, write: if isAuthenticated() && isAdmin();
    }

    // 7. Payments: Users read own; Admin write.
    match /payments/{paymentId} {
      allow read: if isAuthenticated() && (resource.data.related.memberId == request.auth.uid || isAdmin());
      allow write: if isAuthenticated() && isAdmin();
    }
  }
}
